@page
@model IdentityServer.Pages.Admin.Users.IndexModel
@{
}

<div class="clients-page">
    <div class="row">
        <h2>
            Registered Users
        </h2>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var scope in Model.Users)
                    {
                        <tr>
                            <td><span>@scope.Name</span></td>
                            <td><span>@scope.Email</span></td>
                            <td><span>@scope.PhoneNumber</span></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

@page
@model IdentityServer.Pages.Clients.IndexModel
@{
}
<div class="clients-page">
    <div class="row">
        <h2>
            Registered Client Applications
        </h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col">
                    <a asp-page="/Admin/Clients/AddClient" class="btn btn-success">Add New</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Client ID</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var client in Model.Clients)
                    {
                        <tr>
                            <td><a asp-page="/Admin/Clients/EditClient" asp-route-id="@client.Id">@client.DisplayName</a></td>
                            <td>
                                <span id="clientId">@client.ClientId</span>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    function maskSensitiveInfo() {
        var clientIdCell = document.getElementById("clientId");
        var clientSecretCell = document.getElementById("clientSecret");

        // Mask client ID
        clientIdCell.textContent = maskString(clientIdCell.textContent);

        // Mask client secret
        clientSecretCell.textContent = maskString(clientSecretCell.textContent);
    }

    function maskString(str) {
        // Replace each character with a dot
        return str.replace(/./g, '*');
    }
</script>

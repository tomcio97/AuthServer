@page
@model IdentityServer.Pages.Scopes.IndexModel
@{
}

<div class="clients-page">
    <div class="row">
        <h2>
            Registered Scopes
        </h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col">
                    <a asp-page="/Admin/Scopes/AddNew" class="btn btn-success">Add New</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Display Name</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var scope in Model.Scopes)
                    {
                        <tr>
                            <td><a asp-page="/Admin/Scopes/Edit" asp-route-id="@scope.Id">@scope.Name</a></td>
                            <td>
                                <span>@scope.DisplayName</span>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

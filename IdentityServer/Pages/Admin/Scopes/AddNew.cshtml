@page
@model IdentityServer.Pages.Scopes.AddNewModel
@{
}

<div class="clients-page">
    @if (Model.Created)
    {
        <div class="row">
            <div class="col-md-6">
                <h2>Scope Name <em>@Model.InputModel.Name</em> created</h2>
            </div>
        </div>
    }
    else
    {
        <h2>
            Add New Scope
        </h2>


        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="@Model.InputModel.Name"></label>
                        <input class="form-control" asp-for="@Model.InputModel.Name" autofocus />
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.InputModel.DisplayName"></label>
                        <input class="form-control" asp-for="@Model.InputModel.DisplayName" autofocus />
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.InputModel.Resources"></label>
                        <input class="form-control" asp-for="@Model.InputModel.Resources" />
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Save Changes</button>
                        <a class="btn btn-secondary" asp-page="/Admin/Scopes/Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}